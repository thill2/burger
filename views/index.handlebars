<div class="container">

  <div class="row">
    <div class="center col-sm-12">
      <img src="/assets/images/burger.png" alt="burger">
      <h1>Eat-Da-Burger</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers Available To Eat!</h2>
      <ul>
        {{#each burgerData}} {{#unless this.devoured}}
        <li>
          {{this.id}}. {{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="1">
            <button class="btn-primary" type="submit">Devour It!</button>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2>Burgers That Have Been Eaten!</h2>
      {{#each burgerData}} {{#if this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}
      </li>
      {{/if}} {{/each}}
    </div>
  </div>

  <div class="row">
    <div class="center col-sm-12">
      <h2>Create new burgers here!</h2>

      <form action="/createBurger" method="POST">
        <div class="form-group">
          <input type="text" id="ca" name="burgerName">
        </div>
        <button class="btn-primary" type="submit">Submit Order</button>
      </form>

        <br>
        <p>Enter a burger you want to order and click the Submit Order button.</p>
    </div>
  </div>
</div>